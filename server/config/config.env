
# Server
PORT=5000
NODE_ENV=development

# Frontend
FRONTEND_URL=http://localhost:3000
DASHBOARD_URL=http://localhost:3000

# Auth / Cookies
JWT_SECRET_KEY=your_jwt_secret_here
JWT_EXPIRES_IN=7d
COOKIE_EXPIRES_IN=7

# Email (nodemailer)
SMTP_SERVICE=gmail
SMTP_MAIL=you@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465

# Cloudinary
CLOUDINARY_CLIENT_NAME=your_cloud_name
CLOUDINARY_CLIENT_API=your_cloud_api_key
CLOUDINARY_CLIENT_SECRET=your_cloud_api_secret

# Stripe
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_FRONTEND_KEY=pk_test_...

# MongoDB
# Example local (no auth): mongodb://localhost:27017/mern_ecommerce_store
# Example with auth (docker): mongodb://root:example@localhost:27017/mern_ecommerce_store?authSource=admin
MONGO_URI=mongodb://localhost:27017/mern_ecommerce_store